[user]
	name = Ben Smith
	email = ben@thesmith.co.uk
	editor = vim
[alias]
    st = status
    stat = status
    ci = commit -a
    br = branch
    df = diff
    lg = log -p
    co = checkout
    tree = log --graph --pretty=oneline --decorate
    pom = push origin master
    amend = commit --amend -C HEAD
[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	autocrlf = input
[apply]
    whitespace = fix
[diff]
    tool = vimdiff
[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[push]
	default = simple
